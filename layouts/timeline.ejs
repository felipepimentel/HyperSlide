<div class="container mx-auto px-12 h-full flex flex-col justify-center relative z-10">

    <!-- Title Section -->
    <div class="text-center mb-16">
        <%- content.split('\n').filter(l=> l.startsWith('#')).map(l => md.render(l)).join('\n') %>
    </div>

    <!-- Timeline Container -->
    <div class="timeline-container max-w-4xl mx-auto overflow-y-auto pr-4 max-h-[60vh]">
        <!-- Render content but strip headers since we handled them above -->
        <%- content.split('\n').filter(l=> !l.startsWith('#')).join('\n') %>
    </div>

    <style>
        .timeline-container ul {
            position: relative;
            padding-left: 2rem;
            list-style: none;
            border-left: 2px solid var(--hs-glass-border);
        }

        .timeline-container li {
            position: relative;
            margin-bottom: 2rem;
            padding-left: 2rem;
        }

        /* Timeline Dot */
        .timeline-container li::before {
            content: '';
            position: absolute;
            left: -2.6rem;
            /* Adjust based on border and padding */
            top: 0.5rem;
            width: 1rem;
            height: 1rem;
            background: var(--hs-accent);
            border-radius: 50%;
            box-shadow: 0 0 0 4px var(--hs-glass-bg);
            z-index: 1;
        }

        /* Strong text (timeline year/date) highlighting */
        .timeline-container li strong {
            display: block;
            color: var(--hs-accent);
            font-family: var(--hs-font-mono);
            font-size: 0.9em;
            margin-bottom: 0.25rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .timeline-container li p {
            margin: 0;
            color: var(--hs-text);
            opacity: 0.9;
        }
    </style>
</div>