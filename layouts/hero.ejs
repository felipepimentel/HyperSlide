<div class="flex flex-col items-center justify-center h-full p-20 text-center relative overflow-hidden"
    style="<%= bgStyle %>">
    <!-- Ambient Glow Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none -z-10">
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[var(--hs-accent)]/20 rounded-full blur-[120px] animate-pulse">
        </div>
        <div
            class="absolute top-1/4 right-1/4 w-[300px] h-[300px] bg-[var(--hs-secondary)]/15 rounded-full blur-[80px]">
        </div>
    </div>

    <% if (locals.title) { %>
        <h1 class="text-6xl md:text-7xl font-black mb-6 tracking-tight leading-none">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-white to-white/70
                         [text-shadow:0_0_80px_var(--hs-accent-glow)]">
                <%= title %>
            </span>
        </h1>
        <% } %>

            <div class="prose lg:prose-xl dark:prose-invert max-w-3xl">
                <%- content %>
            </div>

            <!-- Decorative Line -->
            <div
                class="absolute bottom-20 left-1/2 -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-transparent via-[var(--hs-accent)] to-transparent rounded-full">
            </div>
</div>