<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
    <%= locals.variant === 'success' ? 'bg-green-500/20 text-green-400 border border-green-500/30' : 
        locals.variant === 'warning' ? 'bg-amber-500/20 text-amber-400 border border-amber-500/30' :
        locals.variant === 'error' ? 'bg-red-500/20 text-red-400 border border-red-500/30' :
        locals.variant === 'info' ? 'bg-blue-500/20 text-blue-400 border border-blue-500/30' :
        'bg-[var(--hs-accent)]/20 text-[var(--hs-accent)] border border-[var(--hs-accent)]/30' %>">
    <% if (locals.icon) { %><span class="mr-1.5">
            <%= icon %>
        </span>
        <% } %>
            <%= text %>
</span>